<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ currentLanguage }}
        <span class="caret"></span></a>
    <ul class="dropdown-menu">
        {% for code, name in languages %}
            <li><a href="{{ path(route, routeParams|merge({"_locale": code})) }}"{% if app.request.getLocale() == code %} selected{% endif %}>{{ name }}</a></li>
        {% endfor %}
    </ul>
</li>
