<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Multiplication table training.">
    <meta name="author" content="Andrey Stepanov">

    <title>{% block title %}{% trans %}Multiplication Tables Training{% endtrans %}{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('/vendor/bootstrap/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/narrow-jumbotron.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/tafels.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>
<div class="container">
    {% block header %}
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation"{% if app.request.get('_route') == 'homepage' %} class="active"{% endif %}><a href="{{ url('homepage') }}">{% trans %}Home{% endtrans %}</a></li>
                    <li role="presentation"{% if app.request.get('_route') == 'about' %} class="active"{% endif %}><a href="{{ url('about') }}">{% trans %}About{% endtrans %}</a></li>
                    {{ render(controller(
                    'AppBundle:Default:languages'
                    )) }}
                </ul>
            </nav>
            <h3 class="text-muted">{% trans %}Multiplication training{% endtrans %}</h3>
        </div>
    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block footer %}
        <footer class="footer">
            <p>&copy; {{ "now"|date("Y") }} <a href="http://stackoverflow.com/story/stepashka" target="_blank">Andrey Stepanov</a>.
                <a href="https://github.com/stepashka69/tafels" target="_blank">{% trans %}Project source code.{% endtrans %}</a></p>
        </footer>
    {% endblock %}
</div> <!-- /container -->
{% block javascriptsLoad %}
    <script src="{{ asset('/vendor/jquery/jquery.js') }}"></script>
    <script src="{{ asset('/vendor/bootstrap/js/bootstrap.js') }}"></script>
{% endblock %}

{% block javascripts %}
{% endblock %}
</body>
</html>
